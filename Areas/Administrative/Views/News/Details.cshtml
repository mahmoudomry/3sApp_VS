        <dd class = "col-sm-10">
               @foreach(var m in Model.media)
                {
                    <div class="col-md-3">
                        <img src="~/assets/images/@m.FileName" alt="@m.Title" width="100%"/>
                        </div>
                }
        </dd>
    </dl>
    </div>
        
         

      <a href="@Url.Action("Create","News",new{area="Administrative",Id=Model?.Id})">Edit</a> |
