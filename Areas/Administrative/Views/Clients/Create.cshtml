@model _3sApp.Models.Client

@{
    ViewData["Title"] = "Clients";
      ViewData["ActionTitle"] = @Model==null? "Create":"Edit";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 offset-2">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title">
													@ViewData["ActionTitle"]
												</h3>
											</div>
										</div>
        <form asp-action="@ViewData["ActionTitle"]" enctype="multipart/form-data" method="post" asp-area="Administrative" asp-controller="Clients" class="kt-form">
             @Html.AntiForgeryToken()	
            <div class="kt-portlet__body">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              <input type="hidden" name="Id" value="@(Model is null?0:Model.Id)" />
                @Html.HiddenFor(model => model.Image)
            <div class="form-group">
                  @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
               @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                 
              
            </div>
            <div class="form-group">
                            @Html.LabelFor(m => m.Link, new { @class = "col-md-2 control-label" })
               @Html.TextBoxFor(m => m.Link, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Link, "", new { @class = "text-danger" })
               
            </div>
                 <div class="form-group">

                @if(Model!=null&&Model.Image!=null)
                        {
                    <img src="~/assets/images/@Model.Image" width="100px" />        
                        }
                        @Html.LabelFor(m => m.Image, new { @class = "col-md-2 control-label" })
              <input  name="CoverImage" type="file" class="form-control" />
                        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
              
            </div>
   
           

            <div class="form-group">
                <input type="submit" value="@ViewData["ActionTitle"]" class="btn btn-primary" />
            </div>

            </div>
        </form>
       
    <div>
    <a href="@Url.Action("Index","Clients",new{area="Administrative"})">Back to List</a>

</div> 

</div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
