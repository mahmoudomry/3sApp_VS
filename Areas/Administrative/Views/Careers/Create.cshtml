@model _3sApp.Models.Career

@{
    ViewData["Title"] = "Carres";
      ViewData["ActionTitle"] = @Model==null? "Create":"Edit";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 offset-2">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title">
													@ViewData["ActionTitle"]
												</h3>
											</div>
										</div>
        <form asp-action="@ViewData["ActionTitle"]" enctype="multipart/form-data" method="post" asp-area="Administrative" asp-controller="Carres" class="kt-form">
             @Html.AntiForgeryToken()	
            <div class="kt-portlet__body">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              <input type="hidden" name="Id" value="@(Model is null?0:Model.Id)" />
                    <input type="hidden" name="Createdon" value="@(Model is null?DateTime.Now:Model.Createdon)" />
            <div class="form-group">
               
                 @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
              <select name="Type" class="form-control">
                  <option value="FullTime"> Full Time</option>
                   <option value="PartTime"> Part Time</option>
              </select>
                        @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
               @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
               @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                  @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
               @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
              
            </div>
            <div class="form-group">
                  @Html.LabelFor(m => m.Responsibilities, new { @class = "col-md-2 control-label" })
               @Html.TextAreaFor(m => m.Responsibilities, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Responsibilities, "", new { @class = "text-danger" })
              
            </div>
            <div class="form-group">
                  @Html.LabelFor(m => m.Requirements, new { @class = "col-md-2 control-label" })
               @Html.TextAreaFor(m => m.Requirements, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Requirements, "", new { @class = "text-danger" })
               
            </div>
            <div class="form-group">
                  @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
               @Html.CheckBox("IsActive", new { @class = "checkbox" })
                        @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
               
            </div>
           
            <div class="form-group">
                  @Html.LabelFor(m => m.ClosedDate, new { @class = "col-md-2 control-label" })
               @Html.TextBoxFor(m => m.ClosedDate, new { @class = "form-control",type = "date"  })
                        @Html.ValidationMessageFor(m => m.ClosedDate, "", new { @class = "text-danger" })
              
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["ActionTitle"]" class="btn btn-primary" />
            </div>
            </div>
        </form>


<div>
    <a href="@Url.Action("Index","Careers",new{area="Administrative"})">Back to List</a>
</div>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
